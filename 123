class Anagram
  attr_accessor :word

  def initialize(word)
    @word = word
  end

  def match(word)
    matched_word = []
    matched_word.to_s.split("").sort.to_a
    @word.split("").sort.match {|word| @word == matched_word}
  end
end


listen = Anagram.new("listen")
listen.match(%w(enlists google inlets banana))
