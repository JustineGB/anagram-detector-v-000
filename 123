class Anagram
  attr_accessor :word

  def initialize(word)
    @word = word
  end

  def match(matched_word)
    matched_word = []
    word = @word.split("")
    if word == matched_word.sort
      matched_word
    end
  end
end


listen = Anagram.new("listen")
listen.match(%w(enlists google inlets banana))

sort.match  {|letters| @word == matches }
